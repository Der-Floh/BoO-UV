<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BoO_UV.SettingsPage"
             Title="SettingsPage">
    <StackLayout Margin="50" Spacing="50">
        <Button x:Name="SaveLocationButton" Text="Open Save Location" Clicked="SaveLocationButton_Clicked"/>
        <Button x:Name="ResetObjectButton" Text="Reset Objects" Clicked="ResetObjectsButton_Clicked"/>
        <Button x:Name="ResetCharacterButton" Text="Reset Characters" Clicked="ResetCharactersButton_Clicked"/>
        <VerticalStackLayout>
            <Label Text="Upgrade Amount per Row"/>
            <Entry x:Name="UpgradeAmountEntry" Keyboard="Numeric" TextChanged="UpgradeAmountEntry_TextChanged"/>
        </VerticalStackLayout>
    </StackLayout>
</ContentPage>