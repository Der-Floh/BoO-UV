<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BoO_UV.CharacterStatsPage"
             xmlns:toolkit="clr-namespace:Toolkit;assembly=Toolkit"
             Title="CharacterStatsPage">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="CharacterGrid" Grid.Column="1" Margin="20,20,20,20">
            <Image x:Name="CharacterBackgroundImage" Source="bgcharacterpresentation.png" Aspect="Fill"/>
            <!--<toolkit:SVGImage x:Name="CharacterBackgroundImage" Source="bgcharacterpresentation.svg" VerticalImage="Fill" HorizontalImage="Fill"/>-->
            
            <Grid x:Name="CharacterSelectionContentGrid" Margin="20,20,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Image x:Name="CharacterImage" Source="score_nigel_portrait.png" Grid.Row="1" VerticalOptions="Start" Margin="10,20,20,10"/>
                <Image x:Name="CharacterWantedImage" Source="charaselect_wanted.png" Grid.Row="2" VerticalOptions="Start"/>
                <!--<toolkit:SVGImage x:Name="CharacterWantedImage" Source="charaselect_wanted.svg" Grid.Row="2" VerticalImage="Start"/>-->
                <Label x:Name="CharacterName" Text="NIGEL" Grid.Row="3" VerticalOptions="Start" HorizontalOptions="Center" FontSize="Large"/>
                <Grid x:Name="CharacterDifficultyGrid" Grid.Row="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="CharacterDifficultyLabel" Text="Difficulty" VerticalOptions="Start" HorizontalOptions="Center" FontSize="Medium"/>
                    <Grid x:Name="CharacterDifficultyStarGrid" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image x:Name="CharacterDifficultyStarHolderImage1" Source="star_holder.png"/>
                        <Image x:Name="CharacterDifficultyStarLitImage1" Source="star_lit.png"/>
                        <Image x:Name="CharacterDifficultyStarHolderImage2" Source="star_holder.png" Grid.Column="1"/>
                        <Image x:Name="CharacterDifficultyStarLitImage2" Source="star_lit.png" Grid.Column="1" IsVisible="false"/>
                        <Image x:Name="CharacterDifficultyStarHolderImage3" Source="star_holder.png" Grid.Column="2"/>
                        <Image x:Name="CharacterDifficultyStarLitImage3" Source="star_lit.png" Grid.Column="2" IsVisible="false"/>
                    </Grid>
                </Grid>
                <Grid x:Name="CharacterSpecialGrid" Grid.Row="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="CharacterObjectNameLabel" Text="SHERIFFKEN" VerticalOptions="Start" HorizontalOptions="Start" FontSize="Medium"/>
                    <Label x:Name="CharacterObjectDescriptionLabel" VerticalOptions="Start" HorizontalOptions="Start" FontSize="Small"/>
                    <Image x:Name="CharacterObjectHolderImg" Grid.Row="1" Grid.Column="1"/>
                    <Image x:Name="CharacterObjectRarityImg" Grid.Row="1" Grid.Column="1"/>
                    <Image x:Name="CharacterObjectTypeImg" Grid.Row="1" Grid.Column="1"/>
                </Grid>
            </Grid>
        </Grid>
        <Grid x:Name="CharacterSelectionGrid" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ImageButton x:Name="PrevCharacterButton" Source="charaselect_arrow_unlit.png" BackgroundColor="Transparent" HorizontalOptions="Start"/>
            <ImageButton x:Name="NextCharacterButton" Source="charaselect_arrow_unlit.png" Grid.Column="2" BackgroundColor="Transparent" HorizontalOptions="Start" RotationY="180"/>
        </Grid>
        <ScrollView Grid.Column="3">
            <Grid x:Name="CharcterStatsGrid" Margin="50" ColumnSpacing="50" RowSpacing="10" Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                    <Label x:Name="AttackLabel" Text="Attack"/>
                    <Entry x:Name="AttackEntry" Keyboard="Numeric"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Row="0" Grid.Column="1">
                    <Label x:Name="AttackSpeedLabel" Text="Attackspeed"/>
                    <Entry x:Name="AttackSpeedEntry" Keyboard="Numeric"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Row="1" Grid.Column="0">
                    <Label x:Name="CritChanceLabel" Text="Crit-Chance in %"/>
                    <Entry x:Name="CritChanceEntry" Keyboard="Numeric"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Row="1" Grid.Column="1">
                    <Label x:Name="CritDamageLabel" Text="Crit-Damage in %"/>
                    <Entry x:Name="CritDamageEntry" Keyboard="Numeric"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Row="2" Grid.Column="0">
                    <Label x:Name="AreaLabel" Text="Area in %"/>
                    <Entry x:Name="AreaEntry" Keyboard="Numeric"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Row="2" Grid.Column="1">
                    <Label x:Name="CooldownLabel" Text="Cooldown in % - NOT USED"/>
                    <Entry x:Name="CooldownEntry" Keyboard="Numeric"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Row="3" Grid.Column="0">
                    <Label x:Name="PierceLabel" Text="Pierce - NOT USED"/>
                    <Entry x:Name="PierceEntry" Keyboard="Numeric"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Row="3" Grid.Column="1">
                    <Label x:Name="BounceLabel" Text="Bounce - NOT USED"/>
                    <Entry x:Name="BounceEntry" Keyboard="Numeric"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Row="4" Grid.Column="0">
                    <Label x:Name="DashLabel" Text="Dash - NOT USED"/>
                    <Entry x:Name="DashEntry" Keyboard="Numeric"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Row="4" Grid.Column="1">
                    <Label x:Name="HPLabel" Text="HP"/>
                    <Entry x:Name="HPEntry" Keyboard="Numeric"/>
                </VerticalStackLayout>
                <Button x:Name="ResetButton" Text="Reset" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="Scale" Value="1"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="Scale" Value="0.9"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Button>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>